<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Image URL</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>

  <% @products.each do |product| %>
  <tr>
    <td><%= image_tag "products/#{product.image_url}" %></td>
    <td><span class="product_title"><%= product.title %></span></td>
      <td><%= product.description %></td>
    <td><%= print_price(product.price) %></td>
    <td><%= print_stock(product.stock) %></td>
    <td>  <%= link_to "Show", product_path(product) %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create new Product', new_product_path, id: "new_product" %>
